# Environment Variables Example
# Copy this file to .env.development or .env.production and fill in your values

# Environment (development/production)
NODE_ENV=development

# Server Configuration
PORT=3333
SERVER_URL=http://localhost:3333
CLIENT_URL=http://localhost:9999

# Database
MONGO_CONNECTION=your_mongodb_connection_string_here

# Cloudinary Configuration (get from cloudinary.com)
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"

# JWT & Session (generate strong random strings!)
JWT_SECRET="your_super_secret_jwt_key_here_minimum_32_chars"
SESSION_SECRET="your_session_secret_here_minimum_32_chars"

# AliExpress API (get from AliExpress Partner Platform)
ALIEXPRESS_APP_KEY=your_aliexpress_app_key
ALIEXPRESS_APP_SECRET=your_aliexpress_app_secret

# Google OAuth (get from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Development Only (remove in production)
NGROK_URL=https://your-ngrok-url.ngrok-free.app

# Logging Configuration
LOG_LEVEL=debug
ENABLE_DEBUG_LOGS=true
ENABLE_REQUEST_LOGS=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10

# Security Settings
SECURE_COOKIES=false
TRUST_PROXY=false

# Production Only (add in .env.production)
# NODE_OPTIONS="--max-old-space-size=512"